{
  "version": 2,
  "builds": [
    {
      "src": "main/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "excludeFiles": "/{.next,.cache,node_modules,.git,__pycache__}/**",
        "runtime": "python3.9",
        "analytics": true,
        "report": true
      }
    },
    {
        "src": "build.sh",
        "use":"@vercel/static-build",
        "config":{
            "distDir": "static"
        }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "main/wsgi.py"
    }
  ]
}